<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reservation_detail_time_arrival"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="Time Arrival"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/reservation_detail_date"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:id="@+id/reservation_detail_id"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reservation_detail_date"
            android:textSize="16sp"
            android:text="Date: "
            android:layout_marginLeft="15dp"
            android:layout_marginTop="1dp"
            android:layout_below="@+id/reservation_detail_id"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reservation_detail_time_checkout"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="Time Checkout: "
            android:layout_alignParentLeft="true"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/reservation_detail_time_arrival"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reservation_detail_number_persons"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="Person: "
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/reservation_detail_time_checkout"
            android:layout_marginTop="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reservation_detail_number_meals"
            android:textSize="16sp"
            android:text="Meals: "
            android:layout_marginTop="1dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/reservation_detail_number_persons"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reservation_detail_tables"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="Tables: "
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/reservation_detail_number_meals"
            android:layout_marginTop="1dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reservation_detail_remark"
            android:textSize="16sp"
            android:text="Remark: "
            android:layout_alignParentLeft="true"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/reservation_detail_tables"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reservation_detail_description"
            android:textSize="16sp"
            android:text="Description: "
            android:layout_alignParentLeft="true"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/reservation_detail_remark"
            android:layout_marginBottom="15dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="40dp"
            android:id="@+id/reservation_detail_status"
            android:src="@mipmap/right_black"/>
    </RelativeLayout>



</android.support.v7.widget.CardView>