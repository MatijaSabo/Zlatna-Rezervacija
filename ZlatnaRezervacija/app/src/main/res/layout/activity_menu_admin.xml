<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_menu_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.foi.air.zlatnarezervacija.MenuActivity"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView android:src="@drawable/zlatna_rezervacija"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginBottom="1dp"
            android:layout_gravity="center_horizontal"

            android:adjustViewBounds="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:paddingBottom="10dp">

        <TextView
            android:text="@string/AppName_AppVersion"
            android:textColor="@color/btnColorText"
            android:textSize="10dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />

        <TextView
            android:text="@string/AppDevelopers"
            android:textAlignment="center"
            android:textSize="10dp"
            android:textColor="@color/btnColorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/admin_menu"
        app:menu="@menu/menu_admin"
        app:headerLayout="@layout/navigation_drawer_header"
        android:layout_gravity="start">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
