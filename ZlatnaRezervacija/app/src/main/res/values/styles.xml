<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">#004D40</item>
        <item name="colorPrimary">#004D40</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:icon">@mipmap/logo_zlatna_rezervacija</item>
    </style>
    <style name="Button" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/btnColor</item>
        <item name="android:textColor">@color/btnColorText</item>
    </style>
    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/errorColor</item>
    </style>
    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/btnColor</item>
        <item name="colorControlActivated">@color/btnColorText</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
</resources>
